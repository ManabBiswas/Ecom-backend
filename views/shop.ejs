<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shop - ShopHub</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }

    .product-card {
      transition: all 0.3s ease;
      backdrop-filter: blur(16px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .product-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    .glass-effect {
      backdrop-filter: blur(20px);
      background: rgba(255, 255, 255, 0.95);
      border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .gradient-text {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .add-to-cart-btn {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      transition: all 0.3s ease;
    }

    .add-to-cart-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }

    .toast {
      transition: all 0.3s ease;
    }

    .discount-badge {
      background: linear-gradient(135deg, #029a65 0%, #119f5f 100%);
      animation: pulse 2s infinite;
    }

    @keyframes pulse {

      0%,
      100% {
        transform: scale(1);
      }

      50% {
        transform: scale(1.05);
      }
    }

    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  </style>
</head>

<body class="bg-gradient-to-br from-blue-50 via-white to-purple-50 min-h-screen">
  <!-- Navigation -->
  <nav class="glass-effect shadow-xl sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center">
          <a href="/" class="text-2xl font-bold gradient-text">ShopHub</a>
        </div>
        <div class="hidden md:flex items-center space-x-6">
          <a href="/" class="text-gray-600 hover:text-gray-900">Home</a>
          <a href="/shop" class="text-gray-900 font-medium">Shop</a>
          <a href="/about" class="text-gray-600 hover:text-gray-900">About</a>
          <a href="/contact" class="text-gray-600 hover:text-gray-900">Contact</a>
        </div>
        <div class="flex items-center space-x-4">
          <button onclick="openCartModal()" class="relative p-2 text-gray-600 hover:text-gray-900 transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.68 4.72a1 1 0 00.95 1.28h9.46a1 1 0 00.95-1.28L15 13M7 13v6a2 2 0 002 2h6a2 2 0 002-2v-6" />
            </svg>
            <span id="cartCount" class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center hidden">0</span>
          </button>
          <a href="/users/logout" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg text-sm transition-colors">
            Logout
          </a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Search and Filter Section -->
  <div class="glass-effect shadow-sm border-b border-white/20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col md:flex-row gap-4 items-center">
        <!-- Search Bar -->
        <div class="relative flex-1 max-w-md">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <input type="text" id="searchInput" placeholder="Search products..." class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
        </div>

        <!-- Category Filter -->
        <select id="categoryFilter" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
          <option value="all">All Categories</option>
          <option value="electronics">Electronics</option>
          <option value="fashion">Fashion</option>
          <option value="home">Home & Garden</option>
          <option value="books">Books</option>
          <option value="sports">Sports</option>
        </select>

        <!-- Sort -->
        <select id="sortSelect" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
          <option value="default">Default Sort</option>
          <option value="name">Sort by Name</option>
          <option value="price-low">Price: Low to High</option>
          <option value="price-high">Price: High to Low</option>
        </select>
      </div>
    </div>
  </div>

  <!-- Products Section -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6">
      <h2 class="text-3xl font-bold gradient-text mb-2">All Products</h2>
      <p class="text-gray-600" id="productCount">Showing <%= products.length %> products</p>
    </div>

    <!-- Product Grid -->
    <div id="productGrid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% if (products.length > 0) { %>
      <% products.forEach(function(product) { %>
      <!-- Product Card Container -->
      <div class="product-card rounded-xl shadow-lg overflow-hidden bg-[<%=product.panelColor%>] text-gray-900" data-category="<%= product.category ? product.category.toLowerCase() : '' %>" data-name="<%= product.name.toLowerCase() %>" data-price="<%= product.price %>">

        <!-- Image Section -->
        <div class="relative bg-[<%= product.bgColor %>]">
          <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>" class="w-full h-48 object-cover" onerror="this.src='/images/placeholder.jpg'">

          <!-- Discount Badge -->
          <% if (product.discount && product.discount > 0) { %>
          <span class="absolute top-2 right-2 text-xs px-2 py-1 rounded-full bg-gradient-to-r from-red-500 to-pink-500 text-white font-bold animate-pulse">
            <%= product.discount %>% OFF
          </span>
          <% } %>
        </div>

        <!-- Content Section -->
        <div class="p-4 text-[<%= product.textColor %>]">
          <!-- Product Name -->
          <h3 class="text-lg font-semibold mb-2 line-clamp-2">
            <%= product.name %>
          </h3>

          <!-- Product Description -->
          <p class="text-xs mb-3 italic text-gray-700 line-clamp-2">
            <%= product.description || 'Lorem ipsum dolor sit amet, consectetur adipiscing elit.' %>
          </p>

          <!-- Price and Category Section -->
          <div class="flex items-center justify-between mb-3">
            <!-- Price Information -->
            <div class="flex flex-col space-y-1">
              <% 
      let originalPrice = product.price;
      let discount = product.discount || 0;
      let discountedPrice = originalPrice - (originalPrice * discount / 100);
    %>

              <!-- Current Price -->
              <div class="flex items-center space-x-2">
                <span class="text-2xl font-bold text-[<%= product.textColor %>]">â‚¹<%= discountedPrice.toFixed(2) %></span>
                
              </div>

              <!-- Original Price and Savings (Fixed Height Container) -->
              <div class="h-5 flex items-center space-x-2">
                <% if (discount > 0) { %>
                <span class="text-sm line-through italic text-gray-400">â‚¹<%= originalPrice.toFixed(2) %></span>
                <span class="text-xs text-green-600 font-semibold bg-green-50 px-2 py-0.5 rounded-full">
                  Save â‚¹<%= (originalPrice - discountedPrice).toFixed(2) %>
                </span>
                <% } else { %>
                <!-- Empty space to maintain consistent height -->
                <span class="invisible text-sm">â‚¹0.00</span>
                <% } %>
              </div>
            </div>

            <!-- Category Badge -->
            <% if (product.category) { %>
            <div class="flex flex-col items-end">
              <span class="text-xs bg-gradient-to-r from-indigo-100 to-purple-100 text-indigo-700 px-3 py-1.5 rounded-full font-medium border border-indigo-200">
                <%= product.category %>
              </span>
            </div>
            <% } %>
          </div>

        </div>

        <!-- Add to Cart Button -->
        <div class="flex justify-center">
  <button 
    onclick="addToCart('<%= product._id %>', '<%= product.name %>', '<%= discountedPrice %>', ' <%= product.image.toString('base64') %>', '<%= product.bgColor %>', '<%= product.textColor %>', '<%= product.panelColor %>')" 
    class="add-to-cart-btn px-6 py-2 w-full rounded-xl font-semibold bg-gradient-to-r from-indigo-600 to-purple-600 text-white shadow-md hover:shadow-lg hover:from-indigo-700 hover:to-purple-700 focus:ring-2 focus:ring-indigo-400 focus:outline-none transition-all duration-300"
  >
    ðŸ›’ Add to Cart
  </button>
</div>
      </div>
    </div>
    <% }); %>
    <% } else { %>
    <!-- No Products Message -->
    <div class="col-span-full text-center py-12">
      <div class="text-gray-400 text-xl mb-4">
        <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2 2v-5m16 0h-2M4 13h2" />
        </svg>
      </div>
      <h3 class="text-xl font-medium text-gray-900 mb-2">No products found</h3>
      <p class="text-gray-500">Check back later for new products.</p>
    </div>
    <% } %>
  </div>

  <!-- Filtered No Products Message (Hidden by default) -->
  <div id="noFilteredProducts" class="text-center py-12 hidden">
    <div class="text-gray-400 text-xl mb-4">
      <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2 2v-5m16 0h-2M4 13h2" />
      </svg>
    </div>
    <h3 class="text-xl font-medium text-gray-900 mb-2">No products found</h3>
    <p class="text-gray-500">Try adjusting your search or filter criteria.</p>
  </div>
  </div>

  <!-- Cart Modal -->
  <div id="cartModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 p-4">
    <div class="glass-effect rounded-2xl max-w-2xl w-full max-h-screen overflow-y-auto" onclick="event.stopPropagation()">
      <div class="p-6 border-b border-white/20">
        <div class="flex justify-between items-center">
          <h2 class="text-2xl font-bold gradient-text">Shopping Cart</h2>
          <button onclick="closeCartModal()" class="text-gray-500 hover:text-gray-700 p-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
      <div class="p-6">
        <div id="cartItems" class="space-y-4 mb-6">
          <div class="text-center py-8 text-gray-500">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.68 4.72a1 1 0 00.95 1.28h9.46a1 1 0 00.95-1.28L15 13M7 13v6a2 2 0 002 2h6a2 2 0 002-2v-6" />
            </svg>
            <p class="text-lg">Your cart is empty</p>
          </div>
        </div>
        <div class="border-t border-white/20 pt-6">
          <div class="flex justify-between items-center mb-4">
            <span class="text-xl font-semibold">Total:</span>
            <span id="cartTotal" class="text-2xl font-bold gradient-text">â‚¹0.00</span>
          </div>
          <button onclick="checkout()" class="w-full add-to-cart-btn text-white py-3 px-6 rounded-lg font-semibold">
            Proceed to Checkout
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Toast Container -->
  <div id="toastContainer" class="fixed top-4 right-4 space-y-2 z-50"></div>

  <!-- Include external JavaScript file -->
  <script src="../public/JS/shop.js"></script>
</body>

</html>