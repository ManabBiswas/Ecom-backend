<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Create Product</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-indigo-100 to-pink-100 min-h-screen flex items-center justify-center p-6">

  <div class="max-w-2xl w-full bg-white/70 backdrop-blur-md rounded-2xl shadow-xl p-8 border border-white/30">
    <h1 class="text-4xl font-extrabold text-gray-800 text-center mb-6">
      üõçÔ∏è Create a New Product
    </h1>
    
    <!-- Success Message -->
    <% if (messages && messages.success && messages.success.length > 0) { %>
      <div class="mb-6 bg-green-100 border border-green-400 text-green-800 text-sm px-4 py-3 rounded-xl shadow animate-pulse">
        ‚úÖ <%= messages.success[0] %>
      </div>
    <% } %>

    <!-- Error Message -->
    <% if (messages && messages.error && messages.error.length > 0) { %>
      <div class="mb-6 bg-red-100 border border-red-400 text-red-800 text-sm px-4 py-3 rounded-xl shadow animate-pulse">
        ‚ùå <%= messages.error[0] %>
      </div>
    <% } %>

    <form action="/products/create" method="POST" enctype="multipart/form-data" class="space-y-6 text-gray-700">

      <!-- Product Name -->
      <div>
        <label for="name" class="block mb-2 font-medium">Product Name *</label>
        <input type="text" name="name" id="name" required class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-purple-500 focus:outline-none" placeholder="Enter product name" />
      </div>

      <!-- Price -->
      <div>
        <label for="price" class="block mb-2 font-medium">Price (‚Çπ) *</label>
        <input type="number" name="price" id="price" required min="0" step="0.01" class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-purple-500 focus:outline-none" placeholder="0.00" />
      </div>

      <!-- Discount -->
      <div>
        <label for="discount" class="block mb-2 font-medium">Discount (%)</label>
        <input type="number" name="discount" id="discount" min="0" max="100" value="0" class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-purple-500 focus:outline-none" placeholder="0" />
      </div>

      <!-- Image File -->
      <div>
        <label for="image" class="block mb-2 font-medium">Product Image *</label>
        <input type="file" name="image" id="image" required accept="image/*" class="w-full file:px-4 file:py-2 file:border file:rounded-lg file:bg-indigo-600 file:text-white file:font-semibold file:hover:bg-indigo-700" />
      </div>

      <!-- Background Color -->
      <div>
        <label for="bgColor" class="block mb-2 font-medium">Background Color *</label>
        <div class="flex gap-4">
          <input type="color" name="bgColor" id="bgColor" required class="w-14 h-10 rounded-lg border border-gray-300 cursor-pointer" />
          <input type="text" placeholder="#ffffff" class="flex-1 px-4 py-2 rounded-xl border border-gray-300 focus:ring-2 focus:ring-purple-500 focus:outline-none" onchange="document.getElementById('bgColor').value = this.value" />
        </div>
      </div>

      <!-- Text Color -->
      <div>
        <label for="textColor" class="block mb-2 font-medium">Text Color *</label>
        <div class="flex gap-4">
          <input type="color" name="textColor" id="textColor" required class="w-14 h-10 rounded-lg border border-gray-300 cursor-pointer" />
          <input type="text" placeholder="#000000" class="flex-1 px-4 py-2 rounded-xl border border-gray-300 focus:ring-2 focus:ring-purple-500 focus:outline-none" onchange="document.getElementById('textColor').value = this.value" />
        </div>
      </div>

      <!-- Panel Color -->
      <div>
        <label for="panelColor" class="block mb-2 font-medium">Panel Color *</label>
        <div class="flex gap-4">
          <input type="color" name="panelColor" id="panelColor" required class="w-14 h-10 rounded-lg border border-gray-300 cursor-pointer" />
          <input type="text" placeholder="#f0f0f0" class="flex-1 px-4 py-2 rounded-xl border border-gray-300 focus:ring-2 focus:ring-purple-500 focus:outline-none" onchange="document.getElementById('panelColor').value = this.value" />
        </div>
      </div>

      <!-- Category -->
      <div>
        <label for="category" class="block mb-2 font-medium">Category *</label>
        <select name="category" id="category" required class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-purple-500 focus:outline-none bg-white">
          <option value="">Select category</option>
          <option value="electronics">Electronics</option>
          <option value="clothing">Clothing</option>
          <option value="home">Home & Garden</option>
          <option value="books">Books</option>
          <option value="sports">Sports & Outdoors</option>
          <option value="toys">Toys & Games</option>
          <option value="beauty">Beauty & Personal Care</option>
          <option value="automotive">Automotive</option>
          <option value="food">Food & Beverages</option>
          <option value="other">Other</option>
        </select>
      </div>

      <!-- Submit -->
      <div class="pt-4">
        <button type="submit" class="w-full py-3 px-4 text-lg font-bold bg-purple-600 hover:bg-purple-700 text-white rounded-xl transition duration-300 shadow hover:shadow-lg">
          üöÄ Create Product
        </button>
      </div>

    </form>
  </div>

  <script>
    // Color picker synchronization
    document.querySelectorAll('input[type="color"]').forEach(colorInput => {
      colorInput.addEventListener('change', function() {
        const textInput = this.parentElement.querySelector('input[type="text"]');
        if (textInput) textInput.value = this.value;
      });
    });

    document.querySelectorAll('input[type="text"][placeholder*="#"]').forEach(textInput => {
      textInput.addEventListener('input', function() {
        const colorInput = this.parentElement.querySelector('input[type="color"]');
        if (colorInput && this.value.match(/^#[0-9A-F]{6}$/i)) colorInput.value = this.value;
      });
    });

    // Auto-hide flash messages after 5 seconds
    const flashMessages = document.querySelectorAll('.animate-pulse');
    flashMessages.forEach(message => {
      setTimeout(() => {
        message.style.transition = 'opacity 0.5s ease-out';
        message.style.opacity = '0';
        setTimeout(() => {
          message.remove();
        }, 500);
      }, 5000);
    });

    // Clear form after successful submission (if success message is shown)
    <% if (messages && messages.success && messages.success.length > 0) { %>
      document.querySelector('form').reset();
    <% } %>
  </script>
</body>

</html>