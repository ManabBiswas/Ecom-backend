      0% {
        transform: scale(1);
        opacity: 1;
      }
      100% {
        transform: scale(1.3);
        opacity: 0;
      }
    }

    /* Success Animation */
    .success-checkmark {
      animation: checkmark 0.6s ease-in-out;
    }

    @keyframes checkmark {
      0% {
