    }

    /* Form Styles */
    .form-input {
      transition: all 0.3s ease;
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(10px);
      border: 2px solid rgba(102, 126, 234, 0.1);
    }

    .form-input:focus {
      border-color: #667eea;
